<%= stylesheet_link_tag 'application', media: 'all' %>

<div class="page-type-indra page-type-login">
  <div class="aui-page-panel indra-one-wide">
    <header class="indra-header aui-page-header">
      <div class="aui-page-header-inner">
        <div class="aui-pageheader-main">
          <h1><%= Genesis::INFO.app_name %>
            <small>New Password - v<%= Genesis::INFO.version %></small>
          </h1>
        </div>
      </div>
    </header>
    <div class="aui-group indra-login-method">
      <div class="aui-item indra-login-item indra-login-crowd">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :method => :put, :class => 'aui top-label'}) do |f| %>

            <%= devise_error_messages! %>

            <%= f.hidden_field :reset_password_token %>

            <div class="field-group">
              <%= f.label :password, 'New password' %>
              <%= f.password_field :password, autofocus: true, autocomplete: 'off', :class => 'text full-width-field' %>
              <% if @minimum_password_length %>
                  <div class="description">
                    <%= @minimum_password_length %> characters minimum
                  </div>
              <% end %>
            </div>

            <div class="field-group">
              <%= f.label :password_confirmation, 'Confirm new password' %>
              <%= f.password_field :password_confirmation, autocomplete: 'off', :class => 'text full-width-field' %>
            </div>

            <div class="buttons-container">
              <div class="buttons">
                <%= f.submit 'Change my password', :class => 'aui-button aui-button-primary' %>
              </div>
            </div>

            <%= render 'devise/shared/links' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
