.form-group
  = f.label :title
  = f.text_field :title, :class => 'form-control', :placeholder => 'Title'

.form-group
  = f.label :short_name
  = f.text_field :short_name, :class => 'form-control', :placeholder => 'Course Code'

.form-group
  = f.label :description
  = f.text_area :description, :class => 'form-control', :placeholder => 'Description'

.form-group
  = f.label :course_category_id
  = f.select :course_category_id, options_from_collection_for_select(@course_cats, :id, :title, @course.course_category_id), {include_blank: '- Select -'}, {:class => 'form-control'}