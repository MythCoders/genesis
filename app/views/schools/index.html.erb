<div class="generalAdminHeading aui-page-header">
  <div class="aui-page-header-inner">
    <div class="aui-page-header-main">
      <ol class="aui-nav aui-nav-horizontal">
        <li>
          <h1>
            Schools
          </h1>
        </li>
      </ol>
    </div>
    <div class="aui-page-header-actions">
      <%= link_to 'New School', new_school_path, :class => 'aui-button add-project-trigger' %>
    </div>
  </div>
</div>
<div class="aui-page-panel">
  <div class="aui-page-panel-inner">
    <div class="aui-page-panel-content">
      <table class="aui">
        <thead>
        <tr>
          <th>School Code</th>
          <th>District Code</th>
          <th>Name</th>
          <th>Address</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <% @model.each do |s| %>
            <tr>
              <td><%= link_to s.short_name, school_path(s) %></td>
              <th><%= s.district.short_name %></th>
              <th><%= s.name %></th>
              <th><%= format_address(s.address, nil, s.city, s.state, s.zip_code).html_safe %></th>
            </tr>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>