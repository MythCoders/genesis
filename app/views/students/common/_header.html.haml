%h3
  = "#{@student.formatted_full_name} (#{(@student.student_number)})"
  %small
    = @student.current_grade

.row
  .col-xs-12
    .btn-group
      .btn-group
        %button.btn.btn-default.dropdown-toggle{'aria-expanded' => 'false', 'aria-haspopup' => 'true', 'data-toggle' => 'dropdown', :type => 'button'}
          = fa_icon 'plus'
          New
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to 'Address', new_student_address_path(@student)
          %li
            %a{:href => '#'} Contact
          %li
            = link_to 'Note', new_student_note_path(@student)
      = link_to 'Edit', edit_student_path(@student), :class => 'btn btn-default'
      .btn-group
        %button.btn.btn-default.dropdown-toggle{'aria-expanded' => 'false', 'aria-haspopup' => 'true', 'data-toggle' => 'dropdown', :type => 'button'}
          = fa_icon 'cog'
          Options
          %span.caret
        %ul.dropdown-menu
          %li
            %a{:href => '#'} Withdraw/Transfer
          %li
            %a{:href => '#'} ?
          %li.divider{:role => 'separator'}
          %li
            %a{:href => '#'}
              %span.text-danger Delete student
    .btn-group
      .btn-group
        %button.btn.btn-yellow
          = fa_icon 'warning'
        %button.btn.btn-warning
          = fa_icon 'flag'
        %button.btn.btn-danger
          = fa_icon 'heartbeat'

%br