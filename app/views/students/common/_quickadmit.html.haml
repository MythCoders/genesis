%h4 Basic Information

.container
  .form-group.row
    = f.label :student_name, :class => 'col-sm-2 col-form-label'
    .col-sm-3= f.text_field :first_name, :class => 'form-control', :placeholder => 'First'
    .col-sm-2= f.text_field :middle_name, :class => 'form-control', :placeholder => 'Middle'
    .col-sm-3= f.text_field :last_name, :class => 'form-control', :placeholder => 'Last'
    .col-sm-2= f.text_field :suffix, :class => 'form-control', :placeholder => 'Suffix'
  .form-group.row
    = f.label :date_of_birth, :class => 'col-sm-2 col-form-label'
    .col-sm-3= f.text_field :date_of_birth, :class => 'form-control', :placeholder => 'MM/DD/YYYY'
    .col-sm-3= bs_text_field(f, :date_of_birth)