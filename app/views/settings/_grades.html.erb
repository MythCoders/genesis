<div class="aui-page-panel oddpanelbug" id="districts">
  <div class="aui-page-panel-inner">
    <div class="aui-page-panel-content">
      <h2>Grade Levels <small>These are the grades that districts and schools will be allowed to admit students in.</small>
      </h2>
      <hr/>
      <table class="aui">
        <thead>
        <tr>
          <th></th>
          <th style="width: 10%">Sort Order</th>
          <th>Title</th>
          <th>Short Name</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% Grade.all.order(:sort_order).each do |t| %>
            <tr>
              <td></td>
              <td><%= t.sort_order %></td>
              <td><%= t.title %></td>
              <td><%= t.short_name %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>