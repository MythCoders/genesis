- page_title 'Grade Levels', 'Administration'
%h3 Grade Levels

.panel.panel-primary
  .panel-heading
    %i.fa.fa-search
    Grade Level Search
  %table.table.table-bordered.table-striped.table-hover
    %thead
      %tr
        %th.action-column
        %th Sort Order
        %th Title
        %th Short Name
    %tbody
      - @model.each do |t|
        %tr
          %td= link_to 'Edit', edit_grade_path(t), :class => 'btn btn-link'
          %td= t.sort_order
          %td= t.title
          %td= t.short_name

= link_to 'New Grade Level', new_grade_path, :class => 'btn btn-primary'