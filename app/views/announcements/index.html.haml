- page_title 'Announcements', 'Administration'
%h3
  = fa_icon 'bullhorn'
  Announcements

.row
  .col-lg-9
    .form-group.mb-xl
      %input.form-control.mb{:placeholder => 'Search by title', :type => 'text'}
      .clearfix
        %button.pull-left.btn.btn-default{:type => 'button'} Search
        .pull-right
          %label.checkbox-inline.c-checkbox
            %input#inlineCheckbox10{:type => 'checkbox', :value => 'option1'}
            = succeed 'Include expired announcements' do
              %span.fa.fa-check
    .table-responsive
      %table.table.table-bordered.table-striped
        %thead
          %tr
            %th.action-column
            %th Title
            %th Body
            %th Duration
        %tbody
          - @announcements.each do |a|
            %tr
              %td= link_to 'Select', announcement_path(a)
              %td= a.title
              %td= a.body
              %td= display_thur_dates(a.start_date, a.end_date)
  .col-lg-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title Filters
      .panel-body
        .form-group
          %label Start Date
          %br
          %input{:type => 'text', :class => 'form-control'}
        .form-group
          %label End Date
          %br
          %input{:type => 'text', :class => 'form-control'}
        %button.btn.btn-default.btn-lg Apply

= link_to 'New announcement', new_announcement_path, :class => 'btn btn-primary'