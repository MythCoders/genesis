@model Address

@Html.HiddenFor(m => Model.Id)
@Html.HiddenFor(m => Model.ModDate)
@Html.HiddenFor(m => Model.ModUser)
@Html.HiddenFor(m => Model.AddDate)
@Html.HiddenFor(m => Model.AddUser)
@Html.HiddenFor(m => Model.Version)

<div class="aui">
    <div class="field-group">
        @Html.LabelFor(m => Model.FirstAddressLine)
        @Html.TextBoxFor(m => Model.FirstAddressLine, new {@class = "text", @type = "text"})
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.SecondAddressLine)
        @Html.TextBoxFor(m => Model.SecondAddressLine, new {@class = "text", @type = "text"})
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.City)
        @Html.TextBoxFor(m => Model.City, new {@class = "text", @type = "text"})
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.Region)
        @Html.TextBoxFor(m => Model.Region, new {@class = "text", @type = "text"})
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.County)
        @Html.TextBoxFor(m => Model.County, new {@class = "text", @type = "text"})
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.PostalCode)
        @Html.TextBoxFor(m => Model.PostalCode, new {@class = "text", @type = "text"})
    </div>
</div>

<div class="aui">
    <div class="field-group">
        @Html.LabelFor(m => Model.PhoneNumber)
        @Html.TextBoxFor(m => Model.PhoneNumber, new { @class = "text", @type = "text" })
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.AlternatePhoneNumber)
        @Html.TextBoxFor(m => Model.AlternatePhoneNumber, new { @class = "text", @type = "text" })
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.EmailAddress)
        @Html.TextBoxFor(m => Model.EmailAddress, new { @class = "text", @type = "text" })
    </div>
    <div class="field-group">
        @Html.LabelFor(m => Model.AlternateEmailAddress)
        @Html.TextBoxFor(m => Model.AlternateEmailAddress, new { @class = "text", @type = "text" })
    </div>
</div>