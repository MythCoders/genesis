
@{
    ViewBag.Title = "_ConfigLayout";
}

@using Kendo.Mvc.UI
@{
    var systemName = ConfigurationHelper.SystemName();
    var instanceName = ConfigurationHelper.InstanceName();
    var systemVersion = ConfigurationHelper.SystemVersion();

    var pageTitle = string.IsNullOrWhiteSpace(ViewBag.Title)
        ? $"{systemName} - {instanceName}"
        : $"{systemName} - {instanceName} - {ViewBag.Title}";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@pageTitle</title>

    @Styles.Render("~/Content/cssadmin")
    @Styles.Render("~/Content/kendo/css")
</head>b
<body>
    <div id="page">
        <div id="wrapper">
            <header id="header" role="banner">
                <nav class="aui-header aui-dropdown2-trigger-group" role="navigation">
                    <div class="aui-header-inner">
                        <div class="aui-header-primary">
                            <h1 class="aui-header-logo aui-header-logo-textonly" id="logo">
                                <a href="@Url.Action("Index", "Dashboard", new {area = "Administration"})"><span class="aui-header-logo-device">@systemName</span></a>
                            </h1>
                            <ul class="aui-nav">
                                <li>
                                    <a href="@Url.Action("Index", "Home", new {area = ""})">
                                        <span>Public Website</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <div id="content" role="main">
                <div class="aui-sidebar" aria-expanded="true">
                    <div class="aui-sidebar-wrapper">
                        <div class="aui-sidebar-body">
                            <nav class="aui-navgroup aui-navgroup-vertical">
                                <div class="aui-navgroup-inner">
                                    <div class="aui-sidebar-group aui-sidebar-group-tier-one">
                                        <div class="aui-nav-heading" title="Stuff">
                                            <strong>Navigation</strong>
                                        </div>
                                        <ul class="aui-nav">
                                            <li>
                                                <a class="aui-nav-item" href="@Url.Action("Index", "District", new {area = "Administration"})">
                                                    <span class="aui-icon aui-icon-small aui-iconfont-admin-roles"></span>
                                                    <span class="aui-nav-item-label">Districts</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="aui-nav-item" href="@Url.Action("Config", "Dashboard", new {area = "Administration"})">
                                                    <span class="aui-icon aui-icon-small aui-iconfont-configure"></span>
                                                    <span class="aui-nav-item-label">System Configuration</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </div>
                        <div class="aui-sidebar-footer">
                            <a class="aui-sidebar-toggle aui-sidebar-footer-tipsy aui-button aui-button-subtle"><span class="aui-icon"></span></a>
                        </div>
                    </div>
                </div>

                <div class="aui-page-panel">
                    <div class="aui-page-panel-inner">
                        <section class="aui-page-panel-content">
                            <div class="aui-page-header-inner">
                                <div class="aui-page-header-main">
                                    <ol class="aui-nav aui-nav-breadcrumbs">
                                        <li>
                                            <a href="">eSIS</a>
                                        </li>
                                        <li class="aui-nav-selected">
                                            <a href="#">System Configuration</a>
                                        </li>
                                    </ol>

                                    <h1>System Configuration</h1>
                                </div>
                            </div>

                            <div class="aui-page-panel-inner">
                                <div class="aui-page-panel-nav">
                                    <nav class="aui-navgroup aui-navgroup-vertical">
                                        <div class="aui-navgroup-inner">
                                            <div class="aui-nav-heading">
                                                <strong>General</strong>
                                            </div>
                                            <ul class="aui-nav" resolved="">
                                                <li class="aui-nav-selected"><a class="execute pjax" href="#">School Types</a></li>
                                                <li><a class="execute pjax" href="#">Grades</a></li>
                                            </ul>
                                        </div>
                                    </nav>
                                </div>
                                <div class="aui-page-panel-content">
                                    @RenderBody()
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <footer id="footer"></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/admin")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", false)
    @Html.Kendo().DeferredScripts()
</body>
</html>