@model List<District>

@{
    ViewBag.Title = "Districts";
}

@(Html.Kendo().Grid<District>()
      .Name("pagingGrid")
      .Columns(cols =>
      {
          cols.NavigationButton(p => p.Id, "Select", Url.Action("Edit"));
          cols.Bound(p => p.SystemCode);
          cols.Bound(p => p.Name);
          cols.Bound(p => p.Address.FirstAddressLine);
      })
      .StandardPagingGrid("District", "Administration")
)

<br /><br />

@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })